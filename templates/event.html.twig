{% extends 'partials/base.html.twig' %}
{% set show_breadcrumbs = header_var('show_breadcrumbs', [page, blog])|defined(true) %}
{% set show_sidebar = header_var('show_sidebar', [page, blog])|defined(true)  %}

{% block content %}


	<article class="event-article">
		<header class="event-header">
			{% include 'partials/event/categories.html.twig' %}
			<h1 class="event-title">{{ page.title }}</h1>
			{% include 'partials/event/meta.html.twig' %}
			{% include 'partials/event/ticket.html.twig' %}
			{% if (config.plugins.events.event_meta.display_location) and (page.header.event.location is not empty) %}
				<h3 class="event-location">
					<span class="location-pin"></span>
					{{ page.header.event.location }}</h3>
			{% endif %}
		</header>
		{% if 'Utopia Film Festival' in page.taxonomy.category %}
			<section class="event">
				<div class="event-content">
					{{  page.content|slice(page.summary|length) }}
				</div>
				{% include 'partials/event_meta.html.twig' with { 'page': page } %}
			</section>
		{% else %}
			{% set image = page.media.images|first %}
			{% if image != null %}
				{{ image.cropResize(960,1700).html("Veranstaltung: "~page.title, page.title, "img-response") }}
			{% endif %}
			<section class="event">
				<div class="event-content">{{ page.content }}</div>
				{% include 'partials/event_meta.html.twig' with { 'page': page } %}
			</section>
		{% endif %}
	</article>

{% endblock %}
