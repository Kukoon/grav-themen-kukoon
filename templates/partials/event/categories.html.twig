{% if page.taxonomy.category and config.plugins.events.event_sidebar.enable_categories %}
	{% for category in page.taxonomy.category %}
		<a href="{% if event %}{{ event.parent.url|rtrim('/') }}{% else %}{{page.parent.url|rtrim('/')}}{% endif %}/all/category{{ config.system.param_sep }}{{ category }}">
			<span class="chip">
				{{ category }}
			</span>
		</a>
	{% endfor %}
{% endif %}
