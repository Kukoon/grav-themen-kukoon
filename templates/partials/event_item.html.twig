{% set image = page.media.images|first %}
<div class="event-item column col-4 col-sm-12 col-lg-6">
	<div class="card">
		{% if image != null %}
			<div class="card-image">
				<a href="{{ page.url }}">
					{{ image.cropZoom(900,506).html("Veranstaltung: "~page.title, page.title, "img-responsive") }}
				</a>
			</div>
		{% endif %}
		<div class="card-header">
			<div class="chips">
				{% include 'partials/event/categories.html.twig' %}
			</div>
			<div class="card-title h5" style="margin-top: 6px; margin-left: 0.08rem !important">
				<a href="{{ page.url }}">{{ page.title}}</a>
			</div>
		</div>
		<div class="card-body" style="flex: 0 0 auto !important; margin-top: auto">
			{% set category = page.taxonomy.category|first %}
			{% if 'Utopia Film Festival' in page.taxonomy.category %}
				<a href="{% if event %}{{ event.parent.url|regex_replace(['/utopia-film-festival/'], [''])|rtrim('/') }}{% else %}{{ page.parent.url|regex_replace(['/utopia-film-festival/'], [''])|rtrim('/') }}{% endif %}/all/category{{ config.system.param_sep }}{{ category }}">


					<img src="/user/themes/kukoon/images/category/{{ category }}.jpg" alt="{{ category }}" style="height: 48px; margin-top: 2px"/>
				</a>
			{% else %}
				<a href="{% if event %}{{ event.parent.url|rtrim('/') }}{% else %}{{page.parent.url|rtrim('/')}}{% endif %}/all/category{{ config.system.param_sep }}{{ category }}">
					<img src="/user/themes/kukoon/images/category/{{ category }}.jpg" alt="{{ category }}" style="height: 48px; margin-top: 2px"/>

				</a>
			{% endif %}
			<div class="float-right text-right">
				{% if page.header.event.doors_open != null  and page.header.event.doors_open != page.header.event.start %}
					<div>{{ page.header.event.doors_open|dateTranslate(config.plugins.events.event_item.date) }}</div>
					<div>
						Einlass
						<time datetime="{{ page.header.event.doors_open|date("c") }}">
							{{ page.header.event.doors_open|dateTranslate(config.plugins.events.event_item.time) }}
						</time>
					</div>
				{% else %}
					<div>{{ page.header.event.start|dateTranslate(config.plugins.events.event_item.date) }}</div>
					<div>
						Beginn
						<time datetime="{{ page.header.event.start|date("c") }}">
							{{ page.header.event.start|dateTranslate(config.plugins.events.event_item.time) }}
						</time>
					</div>
				{% endif %}
				{% include 'partials/event/ticket.html.twig' %}
			</div>
		</div>
	</div>
</div>
