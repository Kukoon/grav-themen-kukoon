
<h2>{{ page.title }}</h2>
{% set image = page.media.images|first %}
{% if image %}
<div class="card-image">
<a href="{{ page.url }}">{{ image.cropZoom(800,400).html|raw }}</a>
</div>
{% endif %}
<div class="card-body">
    {{ page.content|raw }}
</div>
<div class="card-footer">
{% include 'partials/blog/taxonomy.html.twig' %}
</div>

