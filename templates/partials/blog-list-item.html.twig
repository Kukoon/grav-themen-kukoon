<h2>
	<a href="{{ page.url }}">{{ page.title }}</a>
</h2>
{% set image = page.media.images|first %}
{% if image %}
	<div class="card-image">
		<a href="{{ page.url }}">{{ image.html|raw }}</a>
	</div>
{% endif %}
<div class="card-body">
	{{ page.summary|raw }}
</div>
<div class="card-footer">
	{% include 'partials/blog/taxonomy.html.twig' %}
</div>
