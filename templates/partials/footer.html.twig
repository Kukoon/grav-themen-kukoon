<section id="footer" class="bg-secondary">
	<div class="container {{ grid_size }}">
		<div class="columns">
			{% if grav.language.getLanguage == 'en' %}
				<div class="column col-lg-auto">
					{% for footer in theme_var('opening-hours-en') %}
						{% if footer.enabled %}
							<h4>{{ t("THEME_KUKOON.FOOTER.OPENING_HOURS")|e }}</h4>
							{{ footer.box | markdown }}
						{% endif %}
					{% endfor %}
				</div>
			{% elseif grav.language.getLanguage == 'de'  %}
				<div class="column col-lg-auto">
					{% for footer in theme_var('opening-hours-de') %}
						{% if footer.enabled %}
							<h4>{{ t("THEME_KUKOON.FOOTER.OPENING_HOURS")|e }}</h4>
							{{ footer.box | markdown }}
							{{ opening_hours_table() }}
						{% endif %}
					{% endfor %}
				</div>
			{% endif %}
			{% if grav.language.getLanguage == 'en' %}
				<div class="column col-lg-auto">
					{% for footer in theme_var('contact') %}
						{% if footer.enabled %}
							<h4>{{ t("THEME_KUKOON.FOOTER.CONTACT")|e }}</h4>
							{{ footer.box | markdown }}
						{% endif %}
					{% endfor %}
					{% for footer in theme_var('support-en') %}
						{% if footer.enabled %}
							<h4>{{ t("THEME_KUKOON.FOOTER.SUPPORT")|e }}</h4>
							{{ footer.box | markdown }}
						{% endif %}
					{% endfor %}
				</div>
			{% elseif grav.language.getLanguage == 'de'  %}
				<div class="column col-lg-auto">
					{% for footer in theme_var('contact') %}
						{% if footer.enabled %}
							<h4>{{ t("THEME_KUKOON.FOOTER.CONTACT")|e }}</h4>
							{{ footer.box | markdown }}
						{% endif %}
					{% endfor %}
					{% for footer in theme_var('support-de') %}
						{% if footer.enabled %}
							<h4>{{ t("THEME_KUKOON.FOOTER.SUPPORT")|e }}</h4>
							{{ footer.box | markdown }}
						{% endif %}
					{% endfor %}
				</div>
			{% endif %}

			<div class="column col-lg-auto">
				<h4>{{ t("THEME_KUKOON.FOOTER.NEWSLETTER")|e }}</h4>
					{% include 'partials/subscribe-btn.html.twig' %}
				<h4>{{ t("THEME_KUKOON.FOOTER.SOCIAL")|e }}</h4>
				<div class="social">
					{% for item in theme_var('footers-social') %}
						<a href="{{ item.url }}" target="_blank">
							{% if item.icon %}
								{% set icon = (item.icon|first) %}
								{% if "svg" in icon.type %}
									<!-- img src="{{ url('theme://assets/' ~ icon.name)  }}" alt="{{ item.label }}" /-->
									{{ svg_image('theme://assets/' ~ icon.name) }}
								{% else %}
									<img src="{{ url('theme://assets/' ~ icon.name) }}" alt="{{ item.label }}"/>
								{% endif %}
								<span>{{ item.label|capitalize }}</span>
							{% else %}
								<span>{{ item.label|capitalize }}</span>
							{% endif %}
						</a>
						{% if not loop.last %}
						</br>
					{% endif %}
				{% endfor %}
			</div>
			<h4>{{ t("THEME_KUKOON.FOOTER.LANG")|e }}</h4>
			{% include 'partials/language-selector.html.twig' %}
		</div>
	</div>
</div></div></section><section class="section footer-menu"><section class="container {{ grid_size }}">
<nav class="navbar">
	<section class="navbar-section"></section>
	<section class="navbar-center">
		{% for p in theme_var('menu.bottom')  %}
			{% set page = pages.find(p.page) %}
			{% set current_page = (page.active or page.activeChild) ? 'active' : '' %}
			<a class="btn btn-link {{ current_page }}" href="{{ page.url }}">{{ page.menu }}</a>
		{% endfor %}
	</section>
	<section class="navbar-section"></section>
</nav></section></section>
